# Application
APP_NAME="Multi-Tenant SaaS"
APP_URL="http://localhost:3000"
ENVIRONMENT="development"

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/multitenant_saas"

# Redis
REDIS_URL="redis://localhost:6379/0"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Auth Kit Configuration
PASSKEY_RP_ID="localhost"
PASSKEY_RP_NAME="Multi-Tenant SaaS"
PASSKEY_ORIGIN="http://localhost:3000"
PASSKEY_TIMEOUT_MS=60000

TOTP_ISSUER="Multi-Tenant SaaS"
TOTP_WINDOW=1
RECOVERY_CODES_COUNT=8

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_TLS=true
SMTP_SSL=false
EMAIL_FROM="Multi-Tenant SaaS <noreply@example.com>"

# CORS
CORS_ORIGINS="http://localhost:3000"

# Organization Settings
DEFAULT_ORGANIZATION_PLAN="free"
MAX_FREE_PLAN_MEMBERS=5
INVITATION_EXPIRY_DAYS=7

# Features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_ORGANIZATION_INVITATIONS=true
ENABLE_AUDIT_LOGS=true
# Application
APP_NAME="Auth Kit Demo"
APP_URL="http://localhost:3000"
ENVIRONMENT="development"

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/authkit_demo"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Passkey/WebAuthn Configuration
PASSKEY_RP_ID="localhost"
PASSKEY_RP_NAME="Auth Kit Demo"
PASSKEY_ORIGIN="http://localhost:3000"
PASSKEY_TIMEOUT_MS=60000

# Two-Factor Authentication
TOTP_ISSUER="Auth Kit Demo"
TOTP_WINDOW=1
RECOVERY_CODES_COUNT=8

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_TLS=true
SMTP_SSL=false
EMAIL_FROM="Auth Kit Demo <noreply@authkit.demo>"
EMAIL_TEMPLATE_DIR="templates/emails"

# Redis (optional, for production)
REDIS_URL="redis://localhost:6379/0"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=true
ENABLE_PASSKEYS=true